!!!
.side-bar
  .side-user
    .side-user__box
      %h3.side-user__box__user-name 
        = current_user.name
      .side-user__box__icon
        = link_to new_group_path, class: "side-user__box__icon__btn" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user), class: "side-user__box__icon__btn" do
          = icon('fas', 'cog')
  .side-group
    - current_user.groups.each do |group|
      .side-group__member
        = link_to group_messages_path(group) do
          .side-group__member__group-name 
            = group.name
          .side-group__member__group-latest-massage
            = group.show_last_message
    
.link{ rel: "stylesheet", href: "modules/side_bar.css" }
